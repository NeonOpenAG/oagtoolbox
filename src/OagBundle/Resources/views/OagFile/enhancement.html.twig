{% extends 'OagBundle::Default/index.html.twig' %}

{% block title %}Enhancement Document: {{ name }}{% endblock %}

{% block h1 %}{{ name }}{% endblock %}

{% block body %}
    <h2>Mime type: {{ mimetype }}</h2>

    {% if sectors|length > 0 %}
        {{ include('OagBundle::OagFile/sectors_table.html.twig', { 'sectors': sectors }) }}
    {% else %}
        <h2>No sectors associated</h2>
    {% endif %}

    {% if geolocations|length > 0 %}
        {{ include('OagBundle::OagFile/geolocations_table.html.twig', { 'geolocations': geolocations }) }}
    {% else %}
        <h2>No Geolocations associated</h2>
    {% endif %}
    <div>
        <a href='{{ path('oag_oagfile_classifytext', { 'id': id }) }}'>{% if sectors|length > 0 %}Re-{% endif %}Classify</a>
        |
        <a href='{{ path('oag_oagfile_geocode', { 'id': id }) }}'>{% if sectors|length > 0 %}Re-{% endif %}Geocode</a>
    </div>
{% endblock %}
