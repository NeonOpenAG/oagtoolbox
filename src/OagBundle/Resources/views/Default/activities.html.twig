{% extends 'OagBundle::Default/index.html.twig' %}

{% block stylesheets %}
  <style>
    #sectors li, #locations li {
      display: inline;
      list-style-type: none;
      background-color: lightgrey;
      margin-right: 1em;
    }
  </style>
{% endblock %}

{% block body %}
  <ul id='files'>
    {% for fileName, activities in files %}
      <li>
	<h1>{{ fileName }}</h1>
	<ul id='activities'>
	  {% for activity in activities %}
	    <li>
	      <h2>{{ activity.name }} <em>({{ activity.id }})</em></h2>
	      <h3>Sectors</h3>
	      <ul id='sectors'>
		{% for sector in activity.sectors %}
		  <li>{{ sector.description }}</li>
		{% endfor %}
	      </ul>
	      <h3>Locations</h3>
	      <ul id='locations'>
		{% for location in activity.locations %}
		  <li>{{ location.description }}</li>
		{% endfor %}
	      </ul>
	    </li>
	    <hr>
	  {% endfor %}
	</ul>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
