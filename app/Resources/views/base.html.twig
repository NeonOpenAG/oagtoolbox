<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ toolbox_title }}{% endblock %}</title>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        {% block stylesheets %}
            <link href="{{ asset('bundles/oag/stylesheets/normalize.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/oag/stylesheets/main.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {# Header and navigation #}
        <h1><a href="{{ path('oag_default_index') }}">{{ toolbox_title }}</a></h1>

        <div id="menu" style='padding-bottom: 30px'>
        {% block menu %}{% endblock %}
    </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div id="content">
        {% block body %}{% endblock %}
    </div>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</body>
</html>